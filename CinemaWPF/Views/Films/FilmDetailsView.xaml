<UserControl x:Class="CinemaWPF.Views.Films.FilmDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CinemaWPF.Views.Films"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Film Details"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0 0 0 10"/>

            <TextBlock Text="Film ID:" Margin="0 0 0 5"/>
            <TextBox x:Name="FilmIdInput" Width="250" Height="30" Margin="0 0 0 10"/>

            <TextBlock Text="Title:" Margin="0 0 0 5"/>
            <TextBox x:Name="TitleInput" Width="250" Height="30" Margin="0 0 0 10"/>

            <TextBlock Text="Description:" Margin="0 0 0 5"/>
            <TextBox x:Name="DescriptionInput" Width="250" Height="60" Margin="0 0 0 10" TextWrapping="Wrap"/>

            <TextBlock Text="Release Date:" Margin="0 0 0 5"/>
            <TextBox x:Name="ReleaseDateInput" Width="250" Height="30" Margin="0 0 0 10"/>

            <TextBlock Text="Genre:" Margin="0 0 0 5"/>
            <TextBox x:Name="GenreInput" Width="250" Height="30" Margin="0 0 0 10"/>

            <TextBlock Text="Rating:" Margin="0 0 0 5"/>
            <TextBox x:Name="RatingInput" Width="250" Height="30" Margin="0 0 0 10"/>

            <Button x:Name="SaveFilmButton"
                    Content="Save Details"
                    Background="#FF4CAF50"
                    Foreground="White"
                    Width="150"
                    Height="35"
                    HorizontalAlignment="Left"
                    Click="SaveFilmButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>