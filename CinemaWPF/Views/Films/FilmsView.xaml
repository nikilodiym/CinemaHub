<UserControl x:Class="CinemaWPF.Views.Films.FilmsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CinemaWPF.Views.Films"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Films"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0 0 0 10"/>

            <ListBox x:Name="FilmsListBox"
                     Width="250"
                     Height="150"
                     Margin="0 0 0 10"
                     HorizontalAlignment="Left">
                <!-- Example items -->
                <ListBoxItem Content="Film 1"/>
                <ListBoxItem Content="Film 2"/>
                <ListBoxItem Content="Film 3"/>
            </ListBox>

            <Button x:Name="AddFilmButton"
                    Content="Add New Film"
                    Background="#FF4CAF50"
                    Foreground="White"
                    Width="150"
                    Height="35"
                    HorizontalAlignment="Left"
                    Click="AddFilmButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>