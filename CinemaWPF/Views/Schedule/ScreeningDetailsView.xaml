<UserControl x:Class="CinemaWPF.Views.Schedule.ScreeningDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CinemaWPF.Views.Schedule"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Screening Details"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0 0 0 10"/>

            <TextBlock Text="Screening ID:" Margin="0 0 0 5"/>
            <TextBox x:Name="ScreeningIdInput" Width="250" Height="30" Margin="0 0 0 10"/>

            <TextBlock Text="Film Title:" Margin="0 0 0 5"/>
            <TextBox x:Name="FilmTitleInput" Width="250" Height="30" Margin="0 0 0 10"/>

            <TextBlock Text="Screening Time:" Margin="0 0 0 5"/>
            <TextBox x:Name="ScreeningTimeInput" Width="250" Height="30" Margin="0 0 0 10"/>

            <TextBlock Text="Location:" Margin="0 0 0 5"/>
            <TextBox x:Name="LocationInput" Width="250" Height="30" Margin="0 0 0 10"/>

            <Button x:Name="SaveScreeningButton"
                    Content="Save Details"
                    Background="#FF4CAF50"
                    Foreground="White"
                    Width="150"
                    Height="35"
                    HorizontalAlignment="Left"
                    Click="SaveScreeningButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>