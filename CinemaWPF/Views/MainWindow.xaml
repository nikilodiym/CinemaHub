<Window x:Class="CinemaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#f2f2f2" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="🎬 CinemaHub"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20" />
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,10">
            <TextBox Name="SearchBox" Width="300" Height="30" Margin="0,0,10,0"/>
            <Button Name="LoadButton" Content="Завантажити" Width="100" Height="30"/>
        </StackPanel>
        <ListView Name="MoviesList" Grid.Row="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Назва" Width="200" DisplayMemberBinding="{Binding Title}" />
                    <GridViewColumn Header="Жанр" Width="150" DisplayMemberBinding="{Binding Genre}" />
                    <GridViewColumn Header="Рік" Width="100" DisplayMemberBinding="{Binding Year}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>